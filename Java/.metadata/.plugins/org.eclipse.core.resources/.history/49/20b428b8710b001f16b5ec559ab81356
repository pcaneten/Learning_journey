package bruchtest;

public class Bruch {
	int zaehler;
	int nenner;
	
	void ausgeben() {
		System.out.println(zaehler + "/" + nenner);
	}
	void ausgeben2() {
		System.out.println("der Nenner des Bruchs " + nenner + " " + "der Zaehler des Bruchs " + zaehler);
	}
	void ausgabeDezimalBruch() {
		System.out.println("Dezimalbruch: " + 1.0*zaehler/nenner);
	}
}

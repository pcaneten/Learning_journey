package uebung05;

public class Kreis {
	double radius;
	
	Kreis(){
		this.radius = 0;
	}
	Kreis(double radius){
		this.radius = radius;
	}
	
	/**
	 * 
	 * @return
	 * the radius of the object
	 */
	double getRadius() {
		return this.radius;
	}
	
	/**
	 * 
	 * @param radius
	 * defines the attribute radius
	 */
	void setRadius(double radius) {
		this.radius = radius;  
	};
	
	/**
	 * 
	 * @return
	 * calculates the circumference
	 */
	double getUmfang() {
		double umfang = 2.0 * Math.PI * this.radius;
		return umfang;
	}
	
	/**
	 * 
	 * @return
	 * calculates the area
	 */
	double getFlaeche() {
		double flaeche = Math.PI * this.radius * this.radius;
		return flaeche;
	}

}
